{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "lib": ["ESNext"],
        "strictNullChecks": false,
        "esModuleInterop": true,
        "typeRoots": ["@types"],
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src", "@types"],
    "exclude": ["node_modules"]
}
